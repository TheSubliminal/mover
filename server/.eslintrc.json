{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
    "camelcase": 2,
		"eqeqeq": ["error", "always"],
		"semi": ["error", "always"],
		"no-else-return": "error",
		"no-useless-constructor": "error",
    "no-console": ["error", { "allow": ["warn", "error"] }],
		"indent": ["error", 2, { "SwitchCase": 1 }],
		"quotes": ["error", "single"],
    "require-atomic-updates": "off"
	}
}
